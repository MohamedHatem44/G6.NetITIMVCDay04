@model IEnumerable<Employee>

<div class="d-flex justify-content-center">
    <h2>Employees Portal</h2>
</div>

<br />
<br />
<br />

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Salary</th>
            <th scope="col">Address</th>
            <th scope="col">Email</th>
            <th scope="col">Department</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="col">@item.Id</th>
                <th scope="col">@item.Name</th>
                <th scope="col">@item.Age</th>
                <th scope="col">@item.Salary</th>
                <th scope="col">@item.Address</th>
                <th scope="col">@item.Email</th>
                <th scope="col">@item.Department.Name</th>
                <th scope="col">
                    <a asp-controller="Employee" asp-action="ViewDetails" asp-route-id="@item.Id" class="btn btn-primary mx-2">View</a>
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mx-2">Edit</a>
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">Delete</a>
                </th>
            </tr>
        }
    </tbody>
    <tfoot>
        <a asp-controller="Employee" asp-action="Create" class="btn btn-success my-4">Add Employee</a>
    </tfoot>
</table>